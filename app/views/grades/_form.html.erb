<% if can? :manage, :grades %>

  <%= form_for(@grade) do |f| %>
    <% if @grade.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

        <ul>
          <% @grade.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :product_type %><br />
      <%= f.collection_select :product, Grade::PRODUCTS, :to_s, :humanize %>
    </div>

    <div class="field">
      <%= f.label :remark %><br />
      <%= f.text_area :remark %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% end %>
