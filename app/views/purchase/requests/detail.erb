<h2 align="center" >Purchase Request Detail<br/><%= @purchase_request.code %></h2>

<p id="notice"><%= notice %></p>


<table>
  <tr>
    <th>请 购 编 号<br/>Purchase Code</th>
    <th>请 购 类 别<br/>Purchase Type</th>
  </tr>
  <tr>
    <td><%= @purchase_request.code %></td>
    <td><%= @purchase_request.p_type %></td>
  </tr>
</table>

<table>
  <tr>
    <th>物 品 名 称<br/>Item Name</th>
    <th>采 购 数 量<br/>Quantity</th>
    <th>价 格 预 估<br/>Estimate Price</th>
    <th>采 购 地 点<br/>Location</th>
  </tr>
  <tr>
    <td><%= @purchase_request.i_name %></td>
    <td><%= @purchase_request.qty %></td>
    <td><%= @purchase_request.estimate_price %></td>
    <td><%= @purchase_request.location %></td>
  </tr>
</table>

<table>
  <tr>
    <th>请 购 单 位<br/>Department</th>
    <th>截 止 日 期<br/>Deadline</th>
    <th>请 购 人<br/>Applicant</th>
    <th>请 购 确 认<br/>Confirmed</th>
  </tr>
  <tr>
    <td><%= @purchase_request.dept %></td>
    <td><%= @purchase_request.deadline %></td>
    <td><%= @purchase_request.name %></td>
    <td><%= @purchase_request.confirm %></td>
  </tr>
</table>

<table>
  <tr>
    <th>最 终 采 购 日 期<br/>Actual Purcahse Date</th>
    <th>实 际 采 购 数 量<br/>Actual Purcahse Quantity</th>
    <th>实 际 采 购 价 格<br/>Actual Purcahse Price</th>
  </tr>
  <tr>
    <td><%= @purchase_request.a_date %></td>
    <td><%= @purchase_request.a_qty %></td>
    <td><%= @purchase_request.a_price %></td>
  </tr>
</table>

<table>
  <tr>
    <th>请 购 原 因 及 备 注<br/>Reasons Of Purahcse Request & Remark</th>
  </tr>

  <tr>
    <td><%= @purchase_request.remark rescue nil %></td>
  </tr>
</table>

<table>
  <tr>
    <th>采 购 专 员 备 注 | Note Of Purchase Staffs</th>
  </tr>

  <tr>
    <td><%= @purchase_request.note rescue nil %></td>
  </tr>
</table>

<table>
  <tr>
    <th>
      相 关 照 片 | Related Photos
    </th>
  </tr>

  <% @purchase_request.request_photos.each do |photo| %>
    <tr>
      <td>
        <%= link_to( image_tag(photo.photo.url(:small)), photo.photo.url(:original) ) %>
      </td>
    </tr>
  <% end %>
</table>
<p></p>

<table>
  <tr>
    <th><%= button_to 'Edit | 编 辑', edit_purchase_request_path(@purchase_request), :method=>:get %></th>
    <th><%= button_to 'Back | 返 回', purchase_requests_path+"/warehouse", :method=>:get %></th>
  </tr>
</table>