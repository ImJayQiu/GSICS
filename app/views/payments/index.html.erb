<h2>Listing Payment Records</h2>



<table>
  <tr>
    <% if can? :create, :payments %>
      <th><%= button_to 'New Payment Record', new_payment_path, :method=>:get %></th>
    <% end %>
    <th><%= will_paginate @payments %></th>
  </tr>
</table>

<table>
  <tr>
    <th>Receive Date</th>
    <th>Invoice NO.</th>
    <th colspan="3">Operations</th>

  </tr>

  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.date %></td>
      <td><%= payment.invoice %></td>
      <td><%= button_to 'Show', payment, :method=>:get %></td>
      <% if can? :edit, :payments %>
        <td><%= button_to 'Edit', edit_payment_path(payment), :method=>:get %></td>
      <% end %>
      <% if can? :manage, :payments %>
        <td><%= button_to 'Del', payment, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<br />


<table>
  <tr>
    <% if can? :create, :payments %>
      <th/><%= button_to 'New Payment Record', new_payment_path, :method=>:get %>
    <% end %>
    <th/><%= will_paginate @payments %>
  </tr>
</table>


