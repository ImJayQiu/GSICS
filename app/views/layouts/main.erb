    <%= stylesheet_link_tag 'blue' %>
    <%= stylesheet_link_tag 'jquery' %>
    <%= stylesheet_link_tag 'jquery-ui' %>
    <%= stylesheet_link_tag 'jquery.ui.all' %>
    <%#= stylesheet_link_tag 'scaffold' %>
