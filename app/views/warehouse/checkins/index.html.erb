<h2>Listing Warehousing</h2>

<table>
  <tr>
    <% if can? :manage, :warehouse_checkin %>
      <th><%= button_to 'New Warehousing', new_warehouse_checkin_path, method: :get %></th>
    <% end %>
    <th><%= will_paginate @warehouse_checkins %></th>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Purchase Code</th>
      <th>Item Code</th>
      <th>Quantity</th>
      <th>Operator</th>
      <th colspan="3">Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @warehouse_checkins.each do |warehouse_checkin| %>
      <tr>
        <td>
          <div class="left">
            <%= warehouse_checkin.date.strftime("%Y") rescue nil %>
            <br/>
            <%= warehouse_checkin.date.strftime("%m-%d") rescue nil %>
          </div>
        </td>
        <td>
          <div class="left">
            <%= warehouse_checkin.p_code rescue nil %>
          </div>
        </td>
        <td>
          <div class="left">
            <%= warehouse_checkin.item_code rescue nil %>
          </div>
        </td>
        <td>
          <div class="right">
            <%= number_with_delimiter(warehouse_checkin.w_qty) rescue nil %>
          </div>
        </td>
        <td>
          <div class="left">
            <%= warehouse_checkin.operator rescue nil %>
          </div>
        </td>
        <td><%= button_to 'Show', warehouse_checkin, method: :get %></td>

        <% if can? :manage, :warehouse_checkin %>
          <td><%= button_to 'Edit', edit_warehouse_checkin_path(warehouse_checkin), method: :get   %></td>
          <td><%= button_to 'Del', warehouse_checkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<table>
  <tr>
    <% if can? :manage, :warehouse_checkin %>
      <th><%= button_to 'New Warehousing', new_warehouse_checkin_path, method: :get %></th>
    <% end %>
    <th><%= will_paginate @warehouse_checkins %></th>
  </tr>
</table>