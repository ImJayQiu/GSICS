<div align=center valign=middle>
  <h2>Sign up</h2>

  <p/>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <h5><%= f.label :username %><br />
      <%= f.text_field :username %></h5>
    <p/>
    <h5><%= f.label :email %><br />
      <%= f.email_field :email %></h5>
    <p/>
    <h5><%= f.label :password %><br />
      <%= f.password_field :password %></h5>
    <p/>
    <h5><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></h5>

    <% if can? :manage, :all %>    
      <p/><%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
    <% end %>

    <p><%= f.submit "Sign up" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>

</div>