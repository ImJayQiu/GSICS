<% if can? :manage, :suppliers  %>

  <p id="notice"><%= notice %></p>

  <p>
    <b>Code:</b>
    <%= @supplier.code %>
  </p>

  <p>
    <b>Name:</b>
    <%= @supplier.name %>
  </p>

  <p>
    <b>Category:</b>
    <%= @supplier.category %>
  </p>


  <%= link_to 'Edit', edit_supplier_path(@supplier) %> |
  <%= link_to 'Back', suppliers_path %>


<% else %>

  <%= render "site/denied"  %>

<% end %>