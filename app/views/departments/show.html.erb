<% if can? :manage, :departments %>

  <p id="notice"><%= notice %></p>

  <p>
    <b>Code:</b>
    <%= @department.code %>
  </p>

  <p>
    <b>Name:</b>
    <%= @department.name %>
  </p>

  <p>
    <b>Manager:</b>
    <%= @department.manager %>
  </p>


  <%= link_to 'Edit', edit_department_path(@department) %> |
  <%= link_to 'Back', departments_path %>

<% else %>
  <%= render 'site/denied' %>
<% end %>