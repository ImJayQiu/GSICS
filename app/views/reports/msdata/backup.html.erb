<%  @specs = @microsilicas.group_by{ |m|m.m_type } %> \n\
<%  @specs.sort.each do |spec,ms| %> \n\
  <%  ms.group_by{|s| s.bsize }.sort.each do |size, ms| %> \n\
     <set value='<%= ms.collect(&:bsize).sum rescue nil%>' label='<%=spec%>-<%=size%> Kg, Bags:<%=ms.count rescue nil%> ( <%= ms.collect(&:bsize).sum*100/@microsilicas.collect(&:bsize).sum rescue nil%> %)' /> \n\
  <% end %> \n\
<% end %> \n\





