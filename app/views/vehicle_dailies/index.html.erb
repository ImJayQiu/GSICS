<h2>Listing Vehicle Dailies</h2>


<p></p>

<%= render "vehicle_dailies/summary"  %>

<p></p>

<table>
  <tr>
    <% if can? :create, :vehicles %>
      <th><%= button_to 'New Vehicle daily', new_vehicle_daily_path, :method=>:get %></th>
    <% end %>
    <th><%= will_paginate @vehicle_dailies %></th>
  </tr>
</table>

<table>
  <tr>
    <th>Date<br/>วันที่</th>
    <th>Vehicle Code<br/>หมายเลขรถ</th>
    <th>Fuel<br/>เชื้อเพลิง</th>
    <th>Distance<br/>ระยะทาง<br/>( Unit: Km )</th>
    <th>Running Time<br/>ใช้เวลา<br/>( Unit: Hrs )</th>
    <th>Operator</th>
    <th colspan="3">Operations</th>

  </tr>

  <% @vehicle_dailies.each do |vehicle_daily| %>
    <tr>
      <td><%= vehicle_daily.date.strftime("%Y") %><br/><%= vehicle_daily.date.strftime("%m-%d") %></td>
      <td><%= vehicle_daily.v_id %></td>
      <td><%= vehicle_daily.fuel %></td>
      <td><%= vehicle_daily.distance rescue nil %></td>
      <td><%= vehicle_daily.rtime rescue nil %></td>
      <td><%= vehicle_daily.operator %></td>

      <td><%= button_to 'Show', vehicle_daily, :method=>:get %></td>
      <% if can? :edit, :vehicles %>
        <td><%= button_to 'Edit', edit_vehicle_daily_path(vehicle_daily), :method=>:get %></td>
      <% end %>
      <% if can? :manage, :vehicles %>
        <td><%= button_to 'Del', vehicle_daily, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<table>
  <tr>
    <% if can? :create, :vehicles %>
      <th><%= button_to 'New Vehicle daily', new_vehicle_daily_path, :method=>:get %></th>
    <% end %>
    <th><%= will_paginate @vehicle_dailies %></th>
  </tr>
</table>